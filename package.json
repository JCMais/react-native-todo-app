{
    "name": "codechallengeentria",
    "version": "0.0.1",
    "private": true,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/JCMais/react-native-todo-app"
    },
    "scripts": {
        "build": "npm run clear && babel src --ignore *.spec.js --source-maps inline --out-dir dist --copy-files",
        "clear": "rimraf ./dist",
        "start": "node dist/server.js",
        "start:app": "node node_modules/react-native/local-cli/cli.js start",
        "repl": "nodemon --config ./repl/nodemon.json ./repl.js --exec babel-node",
        "test": "jest --forceExit --runInBand --coverage",
        "test:watch": "jest --watch --coverage",
        "update-schema": "babel-node ./scripts/updateSchema.js",
        "watch": "nodemon src/server.js --exec babel-node",
        "flow" : "flow status",
        "flow:stop" : "flow stop"
    },
    "dependencies": {
        "babel-polyfill": "^6.23.0",
        "bcrypt-as-promised": "^1.1.0",
        "dataloader": "^1.3.0",
        "dotenv-safe": "^4.0.3",
        "graphql": "^0.9.2",
        "graphql-relay": "^0.5.1",
        "isomorphic-fetch": "^2.2.1",
        "jsonwebtoken": "^7.3.0",
        "koa": "^2.2.0",
        "koa-bodyparser": "^4.2.0",
        "koa-compose": "^3.2.1",
        "koa-convert": "^1.2.0",
        "koa-cors": "0.0.16",
        "koa-graphql": "^0.6.2",
        "koa-logger": "^2.0.1",
        "mongoose": "^4.9.3",
        "react": "16.0.0-alpha.6",
        "react-native": "0.43.2",
        "react-relay": "~0.10.0",
        "source-map-support": "^0.4.14"
    },
    "devDependencies": {
        "@types/jasmine": "^2.5.47",
        "babel-cli": "^6.24.0",
        "babel-jest": "^19.0.0",
        "babel-plugin-transform-flow-strip-types": "^6.22.0",
        "babel-preset-react-native-stage-0": "^1.0.1",
        "babel-register": "^6.24.0",
        "babel-relay-plugin": "~0.11.0",
        "del": "^2.2.2",
        "flow-bin": "0.40",
        "jest": "^19.0.2",
        "jest-cli": "^19.0.2",
        "jest-react-native": "^18.0.0",
        "nodemon": "^1.11.0",
        "react-test-renderer": "~15.4.2",
        "reify": "^0.6.8",
        "repl": "^0.1.3",
        "repl-promised": "^0.1.0",
        "repl.history": "^0.1.4",
        "rimraf": "^2.6.1"
    },
    "jest": {
        "bail": true,
        "verbose": true,
        "preset": "jest-react-native",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "./dist"
        ],
        "coverageReporters": [
            "lcov",
            "html"
        ],
        "coverageDirectory": "./coverage/",
        "collectCoverage": false,
        "moduleNameMapper": {
            "^mongoose$": "<rootDir>/node_modules/mongoose"
        },
        "unmockedModulePathPatterns": [
            "promise",
            "source-map"
        ]
    }
}
