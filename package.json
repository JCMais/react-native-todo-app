{
    "name": "codechallengeentria",
    "version": "0.0.1",
    "private": true,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/JCMais/react-native-todo-app"
    },
    "scripts": {
        "build": "npm run clear && babel server --ignore *.spec.js --source-maps inline --out-dir dist --copy-files",
        "clear": "rimraf ./dist",
        "start": "node dist/server.js",
        "start:app": "node node_modules/react-native/local-cli/cli.js start",
        "start:app:reset": "node node_modules/react-native/local-cli/cli.js start --reset-cache",
        "test": "jest --forceExit --runInBand --coverage",
        "test:watch": "jest --watch --coverage",
        "watch": "nodemon --ignore src/ --exec babel-node server/server.js",
        "repl": "nodemon --config ./repl/nodemon.json ./repl.js --exec babel-node",
        "relay": "relay-compiler --src ./src --schema data/schema.graphql",
        "relay:watch": "relay-compiler --src ./src --schema data/schema.graphql --watch",
        "update-schema": "babel-node ./scripts/updateSchema.js",
        "flow": "flow status",
        "flow:stop": "flow stop",
        "android:reverse": "adb reverse tcp:5000 tcp:5000 && adb reverse tcp:8081 tcp:8081 && adb reverse tcp:8097 tcp:8097",
        "android:release:generate": "cd android && ./gradlew assembleRelease",
        "android:release:install": "cd android && adb install app/build/outputs/apk/app-release.apk",
        "android:clean": "cd android && ./gradlew clean",
        "ios": "cd ios && open Bexco.xcodeproj",
        "ios:clear": "cd ios && rm -rf build"
    },
    "dependencies": {
        "babel-polyfill": "^6.23.0",
        "bcrypt-as-promised": "^1.1.0",
        "color": "^1.0.3",
        "dataloader": "^1.3.0",
        "dotenv-safe": "^4.0.3",
        "graphql": "^0.10.3",
        "graphql-relay": "^0.5.2",
        "hoist-non-react-statics": "^1.2.0",
        "isomorphic-fetch": "^2.2.1",
        "jsonwebtoken": "^7.3.0",
        "koa": "^2.3.0",
        "koa-bodyparser": "^4.2.0",
        "koa-compose": "^4.0.0",
        "koa-convert": "^1.2.0",
        "koa-cors": "0.0.16",
        "koa-graphql": "^0.7.0",
        "koa-graphql-batch": "^1.1.0",
        "koa-logger": "^3.0.0",
        "koa-router": "^7.2.1",
        "mongoose": "4.10.0",
        "react": "16.0.0-alpha.12",
        "react-native": "^0.45.1",
        "react-native-prompt": "^1.0.0",
        "react-native-swipeout": "^2.0.13",
        "react-native-vector-icons": "^4.2.0",
        "react-navigation": "^1.0.0-beta.11",
        "react-relay": "^1.1.0",
        "react-relay-network-layer": "^2.0.1",
        "relay-runtime": "^1.1.0",
        "source-map-support": "^0.4.14"
    },
    "devDependencies": {
        "@types/jasmine": "^2.5.53",
        "babel-cli": "^6.24.0",
        "babel-jest": "^20.0.3",
        "babel-plugin-relay": "^1.1.0",
        "babel-plugin-transform-flow-strip-types": "^6.22.0",
        "babel-preset-react-native-stage-0": "^1.0.1",
        "babel-register": "^6.24.0",
        "del": "^3.0.0",
        "flow-bin": "^0.48.0",
        "jest": "^20.0.4",
        "jest-cli": "^20.0.4",
        "jest-react-native": "^18.0.0",
        "nodemon": "^1.11.0",
        "react-devtools": "^2.3.3",
        "react-test-renderer": "16.0.0-alpha.12",
        "reify": "^0.11.24",
        "relay-compiler": "^1.1.0",
        "repl": "^0.1.3",
        "repl-promised": "^0.1.0",
        "repl.history": "^0.1.4",
        "rimraf": "^2.6.1",
        "source-map": "^0.5.6"
    },
    "jest": {
        "bail": true,
        "verbose": true,
        "preset": "jest-react-native",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "./dist"
        ],
        "coverageReporters": [
            "lcov",
            "html"
        ],
        "coverageDirectory": "./coverage/",
        "collectCoverage": false,
        "moduleNameMapper": {
            "^mongoose$": "<rootDir>/node_modules/mongoose"
        },
        "unmockedModulePathPatterns": [
            "promise",
            "source-map"
        ]
    }
}
